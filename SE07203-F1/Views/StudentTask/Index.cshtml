@model List<MyTask>

@{
    ViewData["Title"] = "Bài tập của tôi";
}

<h2>Bài tập được giao</h2>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Tên bài</th>
                <th>Danh mục</th>
                <th>Giáo viên</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@(item.Category?.Name ?? "Không có")</td>
                    <td>@(item.Creator?.Account?.Fullname ?? "Không rõ")</td>
                    <td>
                        <a asp-action="Details"
                           asp-route-id="@item.Id"
                           class="btn btn-sm btn-primary">
                            Xem chi tiết
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        Bạn chưa được giao bài tập nào.
    </div>
}
