@model MyTask

@{
    ViewData["Title"] = "Chi tiết bài tập";
}

<h2>Chi tiết bài tập</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>

        <p>
            <strong>Mô tả:</strong><br />
            @Model.Description
        </p>

        <p>
            <strong>Danh mục:</strong>
            @Model.Category?.Name
        </p>

        <p>
            <strong>Giáo viên giao:</strong>
            @Model.Creator?.Account?.Fullname
        </p>

        <a asp-action="Index" class="btn btn-secondary">
            Quay lại danh sách
        </a>
    </div>
</div>
