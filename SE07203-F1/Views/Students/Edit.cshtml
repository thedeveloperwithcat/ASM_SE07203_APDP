@model SE07203_F1.Models.Student

@{
    ViewData["Title"] = "Edit Student";
}

<h2>Edit Student</h2>

<form asp-action="Edit" asp-controller="Students" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label>StudentId</label>
        <input class="form-control" asp-for="StudentId" />
    </div>
    <div class="form-group">
        <label>Name</label>
        <input class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label>Class</label>
        <input class="form-control" asp-for="Class" />
    </div>
    <div class="form-group">
        <label>Major</label>
        <input class="form-control" asp-for="Major" />
    </div>
    <div class="form-group">
        <label>Status</label>
        <input class="form-control" asp-for="Status" />
    </div>
    <div class="form-group">
        <label>Teacher</label>
        <input class="form-control" asp-for="Teacher" />
    </div>
    <div class="form-group">
        <label>Note</label>
        <input class="form-control" asp-for="Note" />
    </div>
    <button type="submit" class="btn btn-primary" name="submitType" value="save">Save</button>
    <button type="submit" class="btn btn-success" name="submitType" value="continue">Save and Continue</button>
    <a class="btn btn-secondary" href="@Url.Action("Index","Students")">Cancel</a>
</form>

<form asp-action="Delete" asp-controller="Students" asp-route-id="@Model.Id" method="post" style="display:inline;">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this student?');">Delete</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}