@model IEnumerable<SE07203_F1.Models.Student>

@{
    ViewData["Title"] = "Danh sách sinh viên";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">🎓 Danh sách sinh viên</h2>
        @* Nút thêm mới *@
        <a asp-action="Create" class="btn btn-success">
            <i class="fa fa-plus"></i> + Thêm sinh viên
        </a>
    </div>

    @* Form Tìm kiếm *@
    <div class="card p-3 mb-4 bg-light shadow-sm">
        <form asp-action="Index" method="get" class="row g-2 align-items-center">
            <div class="col-auto flex-grow-1">
                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]"
                       class="form-control" placeholder="🔍 Nhập tên, mã SV hoặc email..." />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">Tìm kiếm</button>
            </div>
            <div class="col-auto">
                <a asp-action="Index" class="btn btn-outline-secondary">Đặt lại</a>
            </div>
        </form>
    </div>

    @* Bảng danh sách *@
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>Mã SV</th>
                    <th>Họ và Tên</th>
                    <th>Lớp</th>
                    <th>Ngành</th>
                    <th>Email</th>
                    <th>Trạng thái</th>
                    @* CỘT QUAN TRỌNG: Nút Sửa/Xóa nằm ở đây *@
                    <th style="width: 180px;">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold text-center">@item.StudentId</td>
                            <td>@item.FullName</td>
                            <td class="text-center">@item.Class</td>
                            <td class="text-center">@item.Major</td>
                            <td>@item.Email</td>
                            <td class="text-center">
                                @if (item.Status == "Active")
                                {
                                    <span class="badge bg-success">Đang học</span>
                                }
                                else if (item.Status == "Inactive")
                                {
                                    <span class="badge bg-warning text-dark">Bảo lưu</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@item.Status</span>
                                }
                            </td>

                            @* --- KHU VỰC NÚT SỬA / XÓA --- *@
                            <td class="text-center">
                                <div class="d-flex justify-content-center gap-2">

                                    @* 1. Nút Sửa (Link đến trang Edit) *@
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                        Sửa
                                    </a>

                                    @* 2. Nút Xóa (Dùng Form để bảo mật) *@
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post"
                                          onsubmit="return confirm('⚠️ Bạn có chắc chắn muốn xóa sinh viên: @item.FullName không?');">
                                        <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                                    </form>

                                </div>
                            </td>
                            @* ----------------------------- *@
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center py-4 text-muted">
                            <em>Hiện chưa có sinh viên nào. Hãy bấm nút "Thêm sinh viên" để tạo mới.</em>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>