@model IEnumerable<SE07203_F1.Models.MyTask>
@{
    ViewData["Title"] = "Danh sách Task";
}
<h2>@ViewData["Title"]</h2>

<a asp-action="TasksCreate" class="btn btn-primary mb-3">Thêm Task</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tiêu đề</th>
            <th>Người tạo</th>
            <th>Người được giao</th>
            <th>Category</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Id</td>
                <td>@t.Name</td>
                <td>@t.Creator?.Account?.Fullname</td>
                <td>@t.Assignee?.Account?.Fullname</td>
                <td>@t.Category?.Name</td>
                <td>
                    <a asp-action="TasksDetails" asp-route-id="@t.Id" class="btn btn-info btn-sm">Xem</a>
                    <a asp-action="TasksEdit" asp-route-id="@t.Id" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="TasksDelete" asp-route-id="@t.Id" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
