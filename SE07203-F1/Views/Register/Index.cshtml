@{
    Layout = "_Layout";
    ViewData["Title"] = "Đăng ký";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-8 col-lg-5">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-success text-white text-center py-3 rounded-top-3">
                <h4 class="mb-0 fw-bold">ĐĂNG KÝ TÀI KHOẢN</h4>
            </div>
            <div class="card-body p-4">

                @if (ViewBag.IsError == true)
                {
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-octagon"></i> @ViewBag.Error
                    </div>
                }

                @if (ViewBag.Success == true)
                {
                    <div class="alert alert-success text-center">
                        <h4><i class="bi bi-check-circle"></i> Đăng ký thành công!</h4>
                        <p>Tài khoản của bạn đã được tạo.</p>
                        <a asp-controller="Login" asp-action="Index" class="btn btn-outline-success mt-2">Về trang đăng nhập</a>
                    </div>
                }
                else
                {
                    <form asp-action="RegisterAccount" asp-controller="Register" method="POST">
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Họ và tên</label>
                            <input type="text" class="form-control" name="Fullname" placeholder="Nguyễn Văn A" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Tên đăng nhập</label>
                            <input type="text" class="form-control" name="Username" placeholder="username123" required>
                            <div class="form-text">Email sẽ được tự động tạo theo username (username@gmail.com)</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Mật khẩu</label>
                            <input type="password" class="form-control" name="Password" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Bạn là ai?</label>
                            <select class="form-select" name="Role" required>
                                <option value="" disabled selected>-- Chọn vai trò --</option>
                                <option value="Student">Sinh viên (Student)</option>
                                <option value="Teacher">Giáo viên (Teacher)</option>
                            </select>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-success py-2 fw-bold">
                                <i class="bi bi-person-plus"></i> Đăng ký
                            </button>
                        </div>
                    </form>
                }
            </div>
            @if (ViewBag.Success != true)
            {
                <div class="card-footer text-center bg-light py-3">
                    <span class="text-muted">Đã có tài khoản?</span>
                    <a asp-controller="Login" asp-action="Index" class="text-decoration-none fw-bold text-success">Đăng nhập</a>
                </div>
            }
        </div>
    </div>
</div>

