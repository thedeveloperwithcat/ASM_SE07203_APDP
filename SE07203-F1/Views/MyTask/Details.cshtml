@model MyTask

<h2>Chi tiết Task</h2>

<p><strong>Tên:</strong> @Model.Name</p>
<p><strong>Mô tả:</strong> @Model.Description</p>
<p><strong>Danh mục:</strong> @Model.Category?.Name</p>
<p><strong>Giao cho:</strong> @(Model.Assignee?.Name ?? "Chưa giao")</p>
<p><strong>Người tạo:</strong> @Model.Creator?.Account?.Fullname</p>

<p>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</p>
