@{
}
@model MyTask

<div class="container-fluid">
    <div class="row">
        <div class="col-12 text-center">
            <h1>
                Create a new task
            </h1>
        </div>
        <div class="col-4">
        </div>
        <div class="col-4">
            @if (ViewBag.IsError && String.Compare(ViewBag.Error, String.Empty) != 0)
            {
                <div class="alert alert-danger" role="alert">
                    Error Appeared: @ViewBag.Error
                </div>
            }
            else if (!ViewBag.IsError && String.Compare(ViewBag.Error, String.Empty) == 0)
            {
                <div class="alert alert-success" role="alert">
                    Create new task successfully!!
                </div>
            }
            <form asp-action="Create" asp-controller="MyTask" method="POST">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Task Name</label>
                    <input type="text" class="form-control" id="name" asp-for="Name" name="Name">
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Task Description</label>
                    <input type="text" class="form-control" id="Description" asp-for="Description" name="Description">
                </div>
                <button class="btn btn-outline-success w-100">
                    Submit
                </button>
            </form>
        </div>
        <div class="col-4">
        </div>
    </div>
</div>
