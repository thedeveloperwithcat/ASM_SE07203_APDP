@{
    ViewData["Title"] = "Trang chủ";

    // Lấy thông tin từ Session
    var username = Context.Session.GetString("username") ?? "";
    var fullname = Context.Session.GetString("fullname") ?? "Người dùng";
    var role = Context.Session.GetString("role") ?? "";
}

<div class="text-center py-5">
    <h1 class="display-4 fw-bold text-primary mb-3">Hệ thống Quản lý Học tập</h1>
    <p class="lead text-secondary mb-5">Nền tảng kết nối Giáo viên và Sinh viên hiệu quả.</p>

    @* --- TRƯỜNG HỢP 1: CHƯA ĐĂNG NHẬP --- *@
    @if (string.IsNullOrEmpty(username))
    {
        <div class="d-flex justify-content-center gap-3">
            <a asp-controller="Login" asp-action="Index" class="btn btn-primary btn-lg px-4 shadow-sm">
                <i class="bi bi-box-arrow-in-right"></i> Đăng nhập ngay
            </a>
            <a asp-controller="Register" asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                <i class="bi bi-person-plus"></i> Đăng ký
            </a>
        </div>
    }
    @* --- TRƯỜNG HỢP 2: ĐÃ ĐĂNG NHẬP --- *@
    else
    {
        <div class="card mx-auto shadow-sm border-0" style="max-width: 600px;">
            <div class="card-body p-4">
                <h4 class="card-title text-success mb-3">
                    <i class="bi bi-person-circle"></i> Xin chào, @fullname!
                </h4>
                <p class="card-text text-muted">
                    Bạn đang đăng nhập với vai trò: <span class="badge bg-info text-dark">@role</span>
                </p>

                <hr />

                <div class="d-flex justify-content-center gap-2 mt-3 flex-wrap">

                    @if(role == "Admin" || role == "Teacher")
                    {
                        <a asp-controller="Admin" asp-action="StudentsIndex">Quản lý Sinh viên</a>
                        <a asp-controller="Admin" asp-action="TeachersIndex">Quản lý Giáo viên</a>
                        <a asp-controller="Admin" asp-action="TasksIndex">Quản lý Task</a>
                    }

                    @* --- MENU CHO GIÁO VIÊN / ADMIN --- *@
                    @if (role == "Teacher" || role == "Admin")
                    {
                        <a asp-controller="MyTask" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-list-check"></i> Quản lý Task
                        </a>

                        <a asp-controller="Students" asp-action="Index" class="btn btn-success">
                            <i class="bi bi-people-fill"></i> Quản lý Sinh viên
                        </a>
                    }

                    @* --- MENU CHO SINH VIÊN --- *@
                    else if (role == "Student")
                    {
                        <a asp-controller="StudentTask" asp-action="Index" class="btn btn-primary btn-lg">
                            <i class="bi bi-journal-check"></i> Bài tập của tôi
                        </a>
                    }
                    else
                    {
                        <span class="text-warning">Vai trò chưa xác định hoặc không hợp lệ.</span>
                    }
                </div>
            </div>
        </div>
    }
</div>

@* --- PHẦN GIỚI THIỆU TÍNH NĂNG (FOOTER) --- *@
<div class="row mt-5 g-4">
    <div class="col-md-4">
        <div class="p-4 bg-white rounded shadow-sm h-100 text-center border">
            <div class="mb-3">
                <i class="bi bi-people fs-1 text-primary"></i>
            </div>
            <h4>Sinh viên & Giáo viên</h4>
            <p class="text-muted">Quản lý hồ sơ, thông tin cá nhân và lớp học dễ dàng.</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="p-4 bg-white rounded shadow-sm h-100 text-center border">
            <div class="mb-3">
                <i class="bi bi-list-task fs-1 text-success"></i>
            </div>
            <h4>Quản lý Task</h4>
            <p class="text-muted">Giao bài tập, theo dõi tiến độ và nộp bài trực tuyến.</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="p-4 bg-white rounded shadow-sm h-100 text-center border">
            <div class="mb-3">
                <i class="bi bi-shield-check fs-1 text-warning"></i>
            </div>
            <h4>Bảo mật & An toàn</h4>
            <p class="text-muted">Hệ thống phân quyền chặt chẽ, bảo vệ dữ liệu người dùng.</p>
        </div>
    </div>
</div>
