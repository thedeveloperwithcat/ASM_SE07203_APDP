@{
    ViewData["Title"] = "Home Page";
    var username = Context.Session.GetString("username");
}

<div class="text-center py-5">
    <h1 class="display-4 fw-bold text-primary mb-3">Hệ thống Quản lý Task</h1>
    <p class="lead text-secondary mb-5">Nền tảng kết nối Giáo viên và Sinh viên hiệu quả.</p>

    @if (username == null)
    {
        <div class="d-flex justify-content-center gap-3">
            <a asp-controller="Login" asp-action="Index" class="btn btn-primary btn-lg px-4 shadow-sm">
                <i class="bi bi-box-arrow-in-right"></i> Đăng nhập ngay
            </a>
            <a asp-controller="Register" asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                Tìm hiểu thêm
            </a>
        </div>
    }
    else
    {
        <div class="card mx-auto shadow-sm" style="max-width: 600px;">
            <div class="card-body">
                <h5 class="card-title text-success">Xin chào, @Context.Session.GetString("fullname")!</h5>
                <p class="card-text">Bạn đang đăng nhập với vai trò: <strong>@Context.Session.GetString("role")</strong></p>

                @if (Context.Session.GetString("role") == "Teacher")
                {
                    <a asp-controller="MyTask" asp-action="Index" class="btn btn-primary">Quản lý Task của tôi</a>
                }
                else if (Context.Session.GetString("role") == "Student")
                {
                    <a asp-controller="StudentTask" asp-action="Index" class="btn btn-primary">Xem bài tập được giao</a>
                }
            </div>
        </div>
    }
</div>

<div class="row mt-5 g-4">
    <div class="col-md-4">
        <div class="p-4 bg-white rounded shadow-sm h-100 text-center">
            <i class="bi bi-people fs-1 text-primary"></i>
            <h4 class="mt-3">Sinh viên & Giáo viên</h4>
            <p class="text-muted">Dễ dàng quản lý danh sách và thông tin cá nhân.</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="p-4 bg-white rounded shadow-sm h-100 text-center">
            <i class="bi bi-list-check fs-1 text-success"></i>
            <h4 class="mt-3">Quản lý Task</h4>
            <p class="text-muted">Giao bài tập, theo dõi tiến độ và đánh giá kết quả.</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="p-4 bg-white rounded shadow-sm h-100 text-center">
            <i class="bi bi-shield-lock fs-1 text-warning"></i>
            <h4 class="mt-3">Bảo mật</h4>
            <p class="text-muted">Hệ thống phân quyền rõ ràng, bảo mật thông tin.</p>
        </div>
    </div>
</div>